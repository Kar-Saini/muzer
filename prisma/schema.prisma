generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String  @id @unique @default(cuid())
  name          String
  password      String
  createdSpaces Space[] @relation(name: "CREATED")
  joinedSpaces  Space[]
  streams       Stream[]
}

model Space {
  id          String  @id @unique @default(cuid())
  name        String
  description String?
  creatorId   String
  creator     User    @relation(fields: [creatorId], references: [id], name: "CREATED")
  users       User[]
  streams     Stream[]
}

model Stream {
  id        String  @id @unique @default(cuid())
  name      String?
  upvotes   Int     @default(0)
  downvotes Int     @default(0)
  userId    String
  user User @relation(fields: [userId], references: [id])
  spaceId String 
  space Space @relation(fields: [spaceId], references: [id])
}
